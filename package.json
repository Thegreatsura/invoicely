{
  "name": "invoicely",
  "version": "0.0.1",
  "private": true,
  
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "prettier-plugin-sort-imports": "^1.8.7",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.5.2",
    "typescript": "5.8.2"
  }
}
